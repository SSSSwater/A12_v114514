<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.example.test.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getFile</servlet-name>
        <servlet-class>com.example.test.file.FileGetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getFile</servlet-name>
        <url-pattern>/FileGetServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getQuestion</servlet-name>
        <servlet-class>com.example.test.question.QuestionGetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getQuestion</servlet-name>
        <url-pattern>/QuestionGetServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>sendQuestion</servlet-name>
        <servlet-class>com.example.test.question.QuestionSendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendQuestion</servlet-name>
        <url-pattern>/QuestionSendServlet</url-pattern>
    </servlet-mapping>

</web-app>